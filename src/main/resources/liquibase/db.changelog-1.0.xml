<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">


    <changeSet id="1.0.1" author="andrii.mykytyn">
        <createTable tableName="destinations">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="country" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="city" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="insurance_cost" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="worldwide_insurance" type="TINYINT(4)">
                <constraints nullable="false"/>
            </column>

            <column name="visa_fee" type="TINYINT(4)">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="1.0.2" author="andrii.mykytyn">
        <createTable tableName="hotels">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="room_type" type="VARCHAR(25)">
                <constraints nullable="false"/>
            </column>
            <column name="stars" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="room_members" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.0.3" author="andrii.mykytyn">
        <createTable tableName="tours">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="nights" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="breakfast" type="TINYINT(4)">
                <constraints nullable="false"/>
            </column>

            <column name="dinner" type="TINYINT(4)">
                <constraints nullable="false"/>
            </column>

            <column name="supper" type="TINYINT(4)">
                <constraints nullable="false"/>
            </column>

            <column name="department_date" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="created" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>

            <column name="destination_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_tours_destination"
                             references="destinations(id)"/>
            </column>

            <column name="hotel_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_tours_hotel"
                             references="hotels(id)" />
            </column>


        </createTable>
    </changeSet>



    <changeSet id="1.0.4" author="andrii.mykytyn">
        <createTable tableName="customers">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="first_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="last_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="tour_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_customers_tour"
                             references="tours(id)"/>
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>
